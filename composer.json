{
    "name": "omaicode/ocms",
    "type": "project",
    "description": "OCMS - Content management, Modular & Theme system",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^7.3|^8.0",
        "erusev/parsedown": "^1.7",
        "fruitcake/laravel-cors": "^2.0",
        "graham-campbell/markdown": "^14.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^8.75",
        "laravel/sanctum": "^2.11",
        "laravel/tinker": "^2.5",
        "matriphe/larinfo": "3.0.0",
        "omaicode/laravel-enum": "*",
        "omaicode/laravel-table-builder": "*",
        "omaicode/larinfo": "*",
        "omaicode/log-viewer": "*",
        "omaicode/modules-management": "*",
        "omaicode/permissions-management": "*",
        "omaicode/repository": "*",
        "spatie/image": "1.x",
        "spatie/temporary-directory": "^1.3",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.12",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.9.1",
        "laravel/sail": "^1.0.1",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^5.10",
        "omaicode/debugbar": "*",
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "Modules\\": "modules/",
            "Addons\\Shortcodes\\": "addons/shortcodes",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "git submodule update --init --recursive"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "merge-plugin": {
            "include": [
                "./themes/*/composer.json"
            ],
            "recurse": false,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": false,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-replace": false,
            "merge-scripts": false
        }        
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "libraries/*",
            "options": {
                "symlink": true
            }            
        }
    ]
}
